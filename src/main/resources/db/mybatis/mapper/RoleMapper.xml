<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.example.demo.Role">
    <select id="getRoleById" resultType="Role">
        select *
        from role
        where id = #{id}
    </select>
    <select id="getRoleByName" resultType="Role">
        select *
        from role
        where name = #{name}
    </select>
    <select id="getPage" resultType="Role">
        select *
        from role
        <if test="name != null">
            where name like concat('%',#{name},'%')
        </if>
    </select>
    <select id="getRoleMenus" resultType="RoleMenuRel">
        select *
        from role_menu_rel
        where role_id = #{roleId}
    </select>
    <update id="createRole" parameterType="Role">
        insert into role
            (name, code, description, created_at, updated_at)
        values (#{name}, #{code}, #{description}, now(), now())
    </update>
    <update id="updateRole" parameterType="Role">
        UPDATE role
        SET name        = #{name },
            code        = #{code},
            description =#{description},
            updated_at  = now()
        where id = #{id}
    </update>
    <select id="getAll" resultType="Role">
        select *
        from role;
    </select>
    <delete id="deleteRole">
        delete
        from role
        where id = #{id}
    </delete>
    <delete id="clearMenus">
        delete
        from role_menu_rel
        where role_id = #{roleId}
    </delete>
    <insert id="saveRoleMenus">
        insert into role_menu_rel(role_id,menu_id)
        values
        <foreach collection="roleMenus" item="item" separator=",">
            (
            #{roleId},
            #{item}
            )
        </foreach>
    </insert>
    <insert id="bindRolesByUserId">
        insert into user_role_rel(user_id,role_id)
        values
        <foreach collection="roleIds" item="item" open="(" separator="," close=")">
            #{userId}, #{item}
        </foreach>
    </insert>
    <delete id="cleanRolesByUserId">
        delete
        from user_role_rel
        where user_id = #{userId}
    </delete>
</mapper>
